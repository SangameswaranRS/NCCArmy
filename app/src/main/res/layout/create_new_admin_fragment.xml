<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="30dp"
    app:contentPadding="12dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView3"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:contentPadding="1dp"
        android:layout_below="@+id/cardView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Security Question(Required)"
            android:id="@+id/etSigninSecurityQuestion"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView4"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:contentPadding="1dp"
        android:layout_below="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter password(Required)"
            android:id="@+id/etSigninPassword"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:contentPadding="1dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/cardView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Regimental number(Required)"
            android:id="@+id/etSigninRegimentalNumber" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView5"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:contentPadding="1dp"
        android:layout_below="@+id/cardView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etSigninSecurityAnswer"
            android:hint="Enter the answer for your security question(Required)"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView2"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:contentPadding="1dp"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etSigninUserName"
            android:hint="Enter username(Required)"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:text="       Create Admin      "
        android:layout_width="wrap_content"
        android:background="@drawable/btn_back"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:height="35dp"
        android:layout_below="@+id/cardView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/tvCreateAdminBtn" />


</RelativeLayout>